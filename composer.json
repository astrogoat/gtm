{
    "name": "astrogoat/gtm",
    "description": "A Google Tag Manager app for Strata",
    "keywords": [
        "astrogoat",
        "laravel",
        "gtm"
    ],
    "homepage": "https://github.com/astrogoat/gtm",
    "license": "MIT",
    "authors": [
        {
            "name": "Laura Tonning",
            "email": "tonning@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Brett M",
            "email": "brett@helixsleep.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.hlx.dev"
        }
    ],
    "require": {
        "php": "^8.0",
        "astrogoat/strata": "^0.6.0",
        "illuminate/contracts": "^8.37 || ^9.0|^10.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3|^7.0",
        "orchestra/testbench": "^6.15|^8.5",
        "pestphp/pest": "^1.18|^2.16",
        "pestphp/pest-plugin-laravel": "^1.1|^2.2",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8|^5.15"
    },
    "autoload": {
        "psr-4": {
            "Astrogoat\\Gtm\\": "src",
            "Astrogoat\\Gtm\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Astrogoat\\Gtm\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "vaimo/composer-patches": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Astrogoat\\Gtm\\GtmServiceProvider"
            ],
            "aliases": {
                "GoogleTagManager": "Astrogoat\\Gtm\\Facades"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
